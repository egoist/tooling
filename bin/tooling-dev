#!/usr/bin/env node
const meow = require('meow')
const chalk = require('chalk')
const log = require('../lib/log')

const cli = meow({
  description: false,
  help: `
  Run tooling in development mode

  ${chalk.bold('Options:')}

    ${chalk.yellow('--port')}       ${chalk.dim('Server port')}
    ${chalk.yellow('--dist')}       ${chalk.dim('Directory for output files')}
\t`
}, {
  h: 'help'
})

const options = Object.assign({
  entry: cli.input[0],
  mode: 'dev'
}, cli.flags)

try {
  require('../lib')(options)
} catch (err) {
  log.error(chalk.red(err.message))
  process.exit(1)
}
